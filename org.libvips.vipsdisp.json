{
    "app-id" : "org.libvips.vipsdisp",
    "runtime" : "org.gnome.Sdk",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "command" : "vipsdisp",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd",
        "--filesystem=home"
    ],
    "cleanup" : [
        "/include",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/doc",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libvips",
            "builddir" : true,
            "buildsystem" : "autotools",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/libvips/libvips.git"
                }
            ]
        },
        {
            "name" : "vipsdisp",
            "builddir" : true,
            "buildsystem" : "autotools",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/jcupitt/vipsdisp.git"
                }
            ]
        }
    ]
}

